[core]
  excludesfile = ~/.gitignore
  editor = vim
[user]
  name = Joao Bernardo
  email = jb.amaro95@gmail.com
  signingkey = BD7E37F9EE4D950F51FF44E98781CB06B296EE26
[github]
  user = jbernardo95
[color]
  ui = true
[commit]
  gpgsign = true
[branch]
  autosetuprebase = always
[push]
  default = simple
[pull]
  rebase = true 
[merge]
  ff = only
[status]
  showUntrackedFiles = all
[alias]
  amend = commit --amend --no-edit
  feature = "!f() { git checkout -b $1 && git push -u origin $1; }; f"
  pr = "!f() { hub pull-request -b $1; }; f"
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
  uncommit = reset --soft HEAD^
  stash-all = stash save --include-untracked
  tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[diff]
  tool = icdiff
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = icdiff --line-numbers $LOCAL $REMOTE
